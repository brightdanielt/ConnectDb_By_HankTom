<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_photo_sticker"
            android:src="@android:drawable/ic_menu_my_calendar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="friend_id"
            android:id="@+id/tv_friend_id"
            android:layout_alignBottom="@+id/img_photo_sticker"
            android:layout_toRightOf="@+id/img_photo_sticker"
            android:layout_toEndOf="@+id/img_photo_sticker"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:background="@color/diary_text_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="full_name"
            android:id="@+id/tv_full_name"
            android:background="@color/diary_text_bg"
            android:layout_alignTop="@+id/tv_friend_id"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="63dp"
            android:layout_marginEnd="63dp" />
    </RelativeLayout>
</RelativeLayout>