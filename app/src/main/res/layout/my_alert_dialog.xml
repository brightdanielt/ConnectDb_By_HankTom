<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/alert_dialog_layout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/ed_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLength="@integer/verification_code_length"
            android:textColor="@color/diary_text"
            android:background="@color/diary_text_bg"
            android:layout_margin="@dimen/big_margin_to_bg"
            android:inputType="number"
            android:textSize="@dimen/diary_title">

            <requestFocus></requestFocus>
        </EditText>
    </LinearLayout>

</LinearLayout>